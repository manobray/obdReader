<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.manobray.firstbluetooth.ConnectionScreen"
    android:background="@drawable/fundoapp" >

    <TextView
        android:id="@+id/macAdressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world"
        android:textSize="14sp" />
    
    <EditText
        android:id="@+id/protocoloEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/macAdressTextView"
        android:layout_alignBottom="@+id/macAdressTextView"
        android:layout_marginLeft="23dp"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" >


    <Button
        android:id="@+id/buttonConnectDevice"
        
        android:textColor="#FFFFFF"
       	android:background="@drawable/mainscreenbuttonshape"
		android:shadowColor="#A8A8A8"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="5"
        
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/macAdressTextView"
        android:layout_marginTop="23dp"
        android:text="@string/connectButtonString" />

    <Button
        android:id="@+id/buttonStartReading"
        
        android:textColor="#FFFFFF"
       	android:background="@drawable/mainscreenbuttonshape"
		android:shadowColor="#A8A8A8"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="5"
        
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonConnectDevice"
        android:layout_alignBottom="@+id/buttonConnectDevice"
        android:layout_alignParentRight="true"
        android:text="Start" />

    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonConnectDevice"
        android:layout_below="@+id/buttonConnectDevice"
        android:layout_marginTop="24dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/ErrosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stateTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:text="Erros" />

    

        <requestFocus />
    </EditText>

</RelativeLayout>
